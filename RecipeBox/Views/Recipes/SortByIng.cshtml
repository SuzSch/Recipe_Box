@{
    Layout = "_Layout";
}

@using RecipeBox.Models

@if (@Model.Count == 0)
{
    <h3>There are no recipes with this ingredient >:/</h3>
}
else
{
    <ul>
    @foreach (RecipeIng entry in Model)
        {
            <li>@Html.ActionLink($"{entry.Recipe.RecipeName}", "Details", new {id = entry.Recipe.RecipeId}) : Rating: @entry.Recipe.Rating</li>
        }
    </ul>
}

<p>@Html.ActionLink("Back to Recipe List", "Index")</p>