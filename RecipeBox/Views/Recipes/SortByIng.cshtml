@{
    Layout = "_Layout";
}

@using RecipeBox.Models
<div class="text-container">
<h1> Recipes that use @ViewBag.Ingredient</h1>
</div>

<div class="text-container">
@if (@Model.Count == 0)
{
    <h3>There are no recipes with this ingredient >:/</h3>
}
else
{
    @foreach (RecipeIng entry in Model)
        {
            <h4>@Html.ActionLink($"{entry.Recipe.RecipeName}", "Details", new {id = entry.Recipe.RecipeId}) : Rating:
                @for(int i = 1; i <= entry.Recipe.Rating; i++)
                {
                    <img src="~/img/chickenrating.png" alt="small shiny roasted delicious chicken" width="25x" height="20px">
                } 
            </h4>
        }
}
<hr>

<p>@Html.ActionLink("Back to Recipe List", "Index")</p>
</div>